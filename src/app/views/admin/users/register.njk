{% extends "../layoutAdmin.njk" %}

{% block head %}
    <title>Foodify - Manager</title>
{% endblock %}

{% block content %}

    <div class="contents">

        <form method="POST" action="/users/register">
            <div class="title">
                <h2>Criar usu√°rio</h2>
                <div class="btNav">
                    <button class="bt_primary" type="submit">Salvar</button>
                    <a href="/users/list"> <button class="bt_default" type="button">Cancelar</button> </a>
                </div>
            </div>

            <div class="formUser">

                <div class="item">
                    <div>Nome</div>
                    <div>
                        <input type="text" name="name" value="{{ user.name }}" placeholder="Digite seu nome">
                    </div>
                </div>

                <div class="item">
                    <div>Email</div>
                    <div>
                        <input type="email" name="email" value="{{ user.email }}" placeholder="Digite seu email">
                    </div>
                </div>

                <div class="item">
                    <input type="checkbox" name="is_admin" value="True"> <span> Administrador</span>
                </div>
            </div>

        </form>

    </div>

{% endblock %}