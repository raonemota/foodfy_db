{% extends "../layoutAdmin.njk" %}

{% block head %}
    <title>Foodify - Manager</title>
{% endblock %}

{% block content %}

    <div class="contents">

        <form method="POST" action="/users/edit?_method=PUT">
            <div class="title">
                <h2>Bem vindo, <b>{{user.name}}</b></h2>
                <div class="btNav">
                    <button class="bt_primary" type="submit">Salvar</button>
                </div>
            </div>

            <div class="formUser">

                <div class="item">
                    <div>Nome</div>
                    <div>
                        <input type="text" name="name" value="{{ user.name }}" placeholder="Digite seu nome">
                    </div>
                </div>

                <div class="item">
                    <div>Email</div>
                    <div>
                        <input 
                            type="email" 
                            name="email" 
                            value="{{ user.email }}" 
                            placeholder="Digite seu email"
                            >
                    </div>
                </div>

                <div class="item">
                    <div>Senha</div>
                    <div>
                        <input 
                            {% if error %} class="input_error" {% endif %}
                            type="password" 
                            name="password" 
                            value="" 
                            placeholder="Digite a senha" 
                            required>
                    </div>
                </div>

                <input type="hidden" name="id" value="{{ user.id }}">
                <input type="hidden" name="status" value="{{ user.status }}">

                {% if (token) %}
                    <input type="hidden" name="token" value="{{ token }}">
                {% endif %}

            </div>

        </form>

    </div>

{% endblock %}