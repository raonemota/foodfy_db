{% extends "../layoutAdmin.njk" %}

{% block head %}
    <title>Foodify - Lista de Receitas</title>
{% endblock %}

{% block content %}

    <div class="contents">
                
        <div class="title">
            <h2>Gerenciar receitas</h2>
            <div class="btNav">
                <div><a href="/recipes/create"><button class="bt_primary">Adicionar receita</button></a></div>
            </div>
        </div>

        <div class="cards">

        {% if recipes == '' %}
            <div><span>NÃ£o foram encontrados receitas cadastrados no sistema.</span></div>
        {% endif %}

            {% for recipe in recipes %}
                <div class="card">
                
                    <div class="card__img">
                        <img src="{{ recipe.img }}" alt="">
                    </div>

                    <div class="card__txt">
                        <h2>{{ recipe.title }}</h2>
                        <h3>Chef: {{ recipe.chef }}</h3>
                        <h3>Criado por: {{ recipe.user }}</h3>
                        <a href="/recipes/show/{{ recipe.id }}">Visualizar</a>    
                    </div>

                </div>
            {% endfor %}

        </div>

    </div>
    
{% endblock %}